/* Textarea styling */
textarea {
  width: 100%;
  min-height: 120px;
  padding: 1rem 1.5rem;
  border: 3px solid var(--medium-gray);
  border-radius: 15px;
  font-size: 1.1rem;
  font-family: inherit;
  resize: vertical;
  transition: all 0.3s ease;
  background: linear-gradient(135deg, var(--white), var(--light-gray));
  box-shadow: inset 0 2px 5px rgba(0,0,0,0.1);
  margin-bottom: 1rem;
}

textarea:focus {
  outline: none;
  border-color: var(--primary-yellow);
  background: var(--white);
  box-shadow: 
    inset 0 2px 5px rgba(0,0,0,0.1),
    0 0 0 4px rgba(255, 193, 7, 0.2),
    0 5px 15px rgba(255, 193, 7, 0.3);
  transform: translateY(-2px);
}

textarea:hover {
  border-color: var(--primary-yellow);
  box-shadow: 
    inset 0 2px 5px rgba(0,0,0,0.1),
    0 2px 10px rgba(255, 193, 7, 0.2);
}

/* Checkbox styling */
input[type="checkbox"] {
  width: 20px;
  height: 20px;
  margin-right: 1rem;
  accent-color: var(--primary-red);
  transform: scale(1.5);
  cursor: pointer;
  margin-bottom: 1rem;
}

/* Create custom checkbox container */
label:nth-of-type(2) {
  display: flex;
  align-items: center;
  background: var(--light-yellow);
  padding: 1rem;
  border-radius: 10px;
  border: 2px solid var(--primary-yellow);
  cursor: pointer;
  transition: all 0.3s ease;
}

label:nth-of-type(2):hover {
  background: var(--primary-yellow);
  color: var(--white);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
}

/* Select dropdown styling */
select {
  width: 100%;
  padding: 1rem 1.5rem;
  border: 3px solid var(--medium-gray);
  border-radius: 15px;
  font-size: 1.1rem;
  font-family: inherit;
  background: linear-gradient(135deg, var(--white), var(--light-gray));
  box-shadow: inset 0 2px 5px rgba(0,0,0,0.1);
  cursor: pointer;
  transition: all 0.3s ease;
  margin-bottom: 1rem;
  appearance: none;
  background-image: url("data:image/svg+xml;charset=US-ASCII,%3Csvg%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%20viewBox%3D%220%200%204%205%22%3E%3Cpath%20fill%3D%22%23666%22%20d%3D%22M2%200L0%202h4zm0%205L0%203h4z%22/%3E%3C/svg%3E");
  background-repeat: no-repeat;
  background-position: right 1rem center;
  background-size: 0.65rem auto;
}

select:focus {
  outline: none;
  border-color: var(--primary-yellow);
  background: var(--white);
  box-shadow: 
    inset 0 2px 5px rgba(0,0,0,0.1),
    0 0 0 4px rgba(255, 193, 7, 0.2),
    0 5px 15px rgba(255, 193, 7, 0.3);
  transform: translateY(-2px);
}

select:hover {
  border-color: var(--primary-yellow);
  box-shadow: 
    inset 0 2px 5px rgba(0,0,0,0.1),
    0 2px 10px rgba(255, 193, 7, 0.2);
}

/* Text input styling */
input[type="text"] {
  width: 100%;
  padding: 1rem 1.5rem;
  border: 3px solid var(--medium-gray);
  border-radius: 15px;
  font-size: 1.1rem;
  font-family: inherit;
  background: linear-gradient(135deg, var(--white), var(--light-gray));
  box-shadow: inset 0 2px 5px rgba(0,0,0,0.1);
  transition: all 0.3s ease;
  margin-bottom: 1rem;
}

input[type="text"]:focus {
  outline: none;
  border-color: var(--primary-yellow);
  background: var(--white);
  box-shadow: 
    inset 0 2px 5px rgba(0,0,0,0.1),
    0 0 0 4px rgba(255, 193, 7, 0.2),
    0 5px 15px rgba(255, 193, 7, 0.3);
  transform: translateY(-2px);
}

input[type="text"]:hover {
  border-color: var(--primary-yellow);
  box-shadow: 
    inset 0 2px 5px rgba(0,0,0,0.1),
    0 2px 10px rgba(255, 193, 7, 0.2);
}

/* Placeholder styling */
input[type="text"]::placeholder,
textarea::placeholder {
  color: var(--dark-gray);
  opacity: 0.7;
  font-style: italic;
}

/* Button styling */
button {
  padding: 1.2rem 3rem;
  font-size: 1.3rem;
  font-weight: 600;
  border-radius: 25px;
  cursor: pointer;
  transition: all 0.3s ease;
  border: 2px solid;
  margin-top: 3rem;
  position: relative;
  overflow: hidden;
  display: block;
  margin-left: auto;
  margin-right: auto;
  min-width: 200px;
}

/* Next button styling */
button {
  background: linear-gradient(135deg, var(--primary-yellow), var(--primary-red));
  color: var(--white);
  border-color: var(--primary-yellow);
  box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
}

button::after {
  content: '‚û°Ô∏è';
  margin-left: 0.5rem;
}

button:hover {
  background: linear-gradient(135deg, var(--primary-red), var(--primary-yellow));
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(220, 53, 69, 0.4);
}

button:active {
  transform: translateY(-1px);
}

/* Button hover effect */
button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

button:hover::before {
  left: 100%;
}

/* Form layout */
.step1-container {
  display: flex;
  flex-direction: column;
}

/* Input focus glow effect */
@keyframes inputGlow {
  0% { box-shadow: 0 0 5px rgba(255, 193, 7, 0.5); }
  50% { box-shadow: 0 0 20px rgba(255, 193, 7, 0.8); }
  100% { box-shadow: 0 0 5px rgba(255, 193, 7, 0.5); }
}

textarea:focus,
select:focus,
input[type="text"]:focus {
  animation: inputGlow 2s ease-in-out infinite;
}

/* Add decorative elements */
.step1-container::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 60%;
  height: 3px;
  background: linear-gradient(90deg, transparent, var(--primary-yellow), transparent);
  border-radius: 3px;
}

/* Responsive design */
@media (max-width: 768px) {
  .step1-container {
    padding: 1rem;
    margin: 1rem;
  }
  
  h2 {
    font-size: 1.8rem;
  }
  
  h2::before,
  h2::after {
    display: none;
  }
  
  label {
    font-size: 1rem;
    padding-left: 2rem;
  }
  
  textarea,
  select,
  input[type="text"] {
    padding: 0.75rem 1rem;
    font-size: 1rem;
  }
  
  button {
    width: 100%;
    padding: 1rem;
    font-size: 1.1rem;
  }
}

@media (max-width: 480px) {
  .step1-container {
    padding: 0.5rem;
    margin: 0.5rem;
  }
  
  h2 {
    font-size: 1.5rem;
  }
  
  label {
    padding-left: 1.5rem;
  }
  
  label:nth-of-type(2) {
    padding: 0.75rem;
  }
}

/* Add subtle animation on load */
.step1-container {
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Special styling for Macedonian regions */
select option[value="1"] { color: var(--primary-red); }
select option[value="2"] { color: var(--royal-red); }
select option[value="3"] { color: var(--primary-yellow); }
select option[value="4"] { color: var(--primary-red); }
select option[value="5"] { color: var(--royal-red); }
select option[value="6"] { color: var(--primary-yellow); }
select option[value="7"] { color: var(--primary-red); }
select option[value="8"] { color: var(--royal-red); }

/* CSS Variables (add these to your root CSS if not already defined) */
:root {
  --primary-yellow: #ffc107;
  --primary-red: #dc3545;
  --royal-red: #8b0000;
  --white: #ffffff;
  --light-gray: #f8f9fa;
  --medium-gray: #dee2e6;
  --dark-gray: #6c757d;
  --light-yellow: #fff8dc;
  --light-red: #ffe6e6;
}